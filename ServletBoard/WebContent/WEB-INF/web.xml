<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>ServletBoard</display-name>
  <servlet>
    <servlet-name>SelectAllBoardListServlet</servlet-name>
    <servlet-class>kr.or.ddit.board.controller.SelectAllBoardListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SelectAllBoardListServlet</servlet-name>
    <url-pattern>/board/list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InsertBoardServlet</servlet-name>
    <servlet-class>kr.or.ddit.board.controller.InsertBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertBoardServlet</servlet-name>
    <url-pattern>/board/insert</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>detailSelectBoardServlet</servlet-name>
    <servlet-class>kr.or.ddit.board.controller.detailSelectBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailSelectBoardServlet</servlet-name>
    <url-pattern>/board/detail</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateBoardServlet</servlet-name>
    <servlet-class>kr.or.ddit.board.controller.UpdateBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateBoardServlet</servlet-name>
    <url-pattern>/board/update</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteBoardServlet</servlet-name>
    <servlet-class>kr.or.ddit.board.controller.DeleteBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteBoardServlet</servlet-name>
    <url-pattern>/board/delete</url-pattern>
  </servlet-mapping>
  <servlet>
	<servlet-name>SearchBoardServlet</servlet-name>
	<servlet-class>kr.or.ddit.board.controller.SearchBoardServlet</servlet-class>
	</servlet>
  <servlet-mapping>
	<servlet-name>SearchBoardServlet</servlet-name>
	<url-pattern>/board/search</url-pattern>
  </servlet-mapping>
  
  
  
  <filter>
    <filter-name>CharterEncoding</filter-name>
    <filter-class>kr.or.ddit.util.CustomCharterEncoding</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ErrorHandler</servlet-name>
    <servlet-class>kr.or.ddit.util.T04_ErrorHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorHandler</servlet-name>
    <url-pattern>/ErrorHandler</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/ErrorHandler</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/ErrorHandler</location>
  </error-page>
</web-app>